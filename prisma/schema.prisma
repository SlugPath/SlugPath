generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  googleId String    @unique
  email    String?
  name     String?
  role     Role      @default(USER)
  planners Planner[]
}

model Planner {
  id        String    @id @default(uuid())
  title     String
  updatedAt DateTime  @updatedAt
  active    Boolean
  quarters  Quarter[]

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Quarter {
  id      Int      @id @default(autoincrement())
  term    Term
  year    Int
  courses Course[] @relation()

  plannerId String  @unique
  planner   Planner @relation(fields: [plannerId], references: [id])
}

model Course {
  id         String @id @default(uuid())
  name       String
  department String
  number     String
  credits    Int    @default(5)

  updatedAt DateTime @updatedAt

  quarter Quarter[] @relation()

  // No two courses can have the same department and course number
  @@unique([department, number])
}

enum Role {
  USER
  ADMIN
}

enum Term {
  Fall
  Winter
  Spring
  Summer
}
