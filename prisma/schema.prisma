generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  role     Role      @default(USER)
  planners Planner[]
}

model Planner {
  id        Int       @id @default(autoincrement())
  title     String
  updatedAt DateTime  @updatedAt
  active    Boolean
  quarters  Quarter[]
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
}

model Quarter {
  id   Int  @id @default(autoincrement())
  term Term
  year Int

  planner   Planner @relation(fields: [plannerId], references: [id])
  plannerId Int     @unique
}

model Course {
  id         String   @id @default(uuid())
  name       String
  department String
  number     String
  credits    Int      @default(5)
  /// @TypeGraphQL.omit(output: true)
  createdAt  DateTime @default(now())
  /// @TypeGraphQL.omit(output: true)
  updatedAt  DateTime @updatedAt

  // No two courses can have the same department and course number
  @@unique([department, number])
}

enum Role {
  USER
  ADMIN
}

enum Term {
  FALL
  WINTER
  SPRING
  SUMMER
}
